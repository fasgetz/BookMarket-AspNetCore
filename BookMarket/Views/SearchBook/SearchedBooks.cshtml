@model BookMarket.Models.ViewModels.SearchBook.getDataViewModel



@if (!string.IsNullOrEmpty(Model.GenreName))
{
    <h2 class="text-center">
        @Model.GenreName
    </h2>
}
else
{
    <h2 class="text-center">
        Все книги
    </h2>
}

<nav aria-label="Page navigation example">
    <ul class="pagination justify-content-center">

        @if (Model.page == 1)
        {
            <li class="page-item disabled">
                <a class="page-link" >Назад</a>
            </li>
        }
        else
        {
            <li class="page-item">
                <a class="page-link" onclick="SearchBooks('@Model.InputWord', @(Model.page - 1), @Model.IdGenre)">Назад</a>
            </li>
        }


        @for (int i = 0; i < Math.Ceiling((double)Model.MaxCountBooks / 10); i++)
        {
            @if ((i + 1) == Model.page)
            {
                <li class="page-item active"><a class="page-link">@(i + 1)</a></li>
            }
            else
            {
                <li class="page-item"><a class="page-link" onclick="SearchBooks('@Model.InputWord', @(i + 1), @Model.IdGenre)">@(i + 1)</a></li>
            }
        }
        @if (Model.page == Math.Ceiling((double)Model.MaxCountBooks / 10))
        {
            <li class="page-item disabled">
                <a class="page-link">Вперед</a>
            </li>
        }
        else
        {
            <li class="page-item">
                <a class="page-link" onclick="SearchBooks('@Model.InputWord', @(Model.page + 1), @Model.IdGenre)">Вперед</a>
            </li>
        }
    </ul>
</nav>
@foreach (var item in Model.books)
{
    <div class="row bg-white bookResult">
        <div class="container">
            <div class="row">
                <div class="col-lg-3 text-center bookResult__Poster">
                    <a href="#">
                        <img src="data:image;base64, @System.Convert.ToBase64String(item.PosterBook)" alt="PosterBook" />
                    </a>
                </div>
                <div class="col-lg-7 bookResult__about">
                    <a href="#">
                        <h3 class="text-center">@item.Name</h3>
                    </a>

                    <dl>
                        <div class="row">
                            <dt>Автор</dt>
                            <dd>@item.IdAuthorNavigation.NameFamily</dd>
                        </div>
                        <div class="row">
                            <dt>Жанр</dt>
                            <dd>@item.IdCategoryNavigation.Name</dd>
                        </div>
                        <div class="row">
                            <dt>Дата добавления</dt>
                            <dd>@item.AddDatabase.ToString("D")</dd>
                        </div>
                    </dl>
                </div>
                <div class="col-lg-2 bookResult__buttons">
                    <div class="row d-flex justify-content-center">
                        <a class="mybtn btn btn-primary" asp-action="GetBook" asp-controller="Books" asp-route-idBook="@item.Id">
                            Читать <i class="fa fa-search"></i>
                        </a>
                        <a class="mybtn btn btn-primary" asp-action="AboutBook" asp-controller="Books" asp-route-id="@item.Id" asp-route-name="@item.Name">
                            О книге <i class="fa fa-search"></i>
                        </a>
                    </div>
                </div>
                <div class="col-lg bookResult__text text-center">
                    @(new string(item.Description.Take(280).ToArray()))...
                </div>
            </div>
        </div>
    </div>
}